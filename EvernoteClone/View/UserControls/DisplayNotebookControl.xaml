<UserControl x:Class="EvernoteClone.View.UserControls.DisplayNotebookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvernoteClone.View.UserControls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="nameTextBlock">
            <Setter Property='FontSize' Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource lightColor}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBlock Text="{Binding Notebook.Name}"
                   Style="{StaticResource nameTextBlock}"/>
    </Grid>
</UserControl>
